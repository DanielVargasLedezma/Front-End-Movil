<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@drawable/fondo_entidades"
        tools:context=".ui.view.fragment.carreras.EditarCarreraFragment"
>
    <ImageButton
            android:id="@+id/goBack"

            android:contentDescription="Ir atrás"

            android:src="@drawable/go_back"

            android:layout_width="60dp"
            android:layout_height="60dp"

            android:background="@android:color/transparent"

            app:layout_constraintVertical_bias="0.05"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
    />

    <ImageView
            android:id="@+id/imagenUsuario"

            android:src="@drawable/ic_career"

            android:layout_width="160dp"
            android:layout_height="160dp"

            app:layout_constraintVertical_bias="0.1"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
    />

    <EditText
            android:id="@+id/codigo_carrera"

            android:background="@drawable/design"

            android:inputType="text"
            android:hint="Código de la Carrera"
            android:textColor="@drawable/edit_text"
            android:textColorHint="@color/grisBonito"
            android:gravity="center_vertical|center_horizontal"

            android:visibility="gone"

            android:layout_width="0dp"
            android:layout_height="48dp"
            android:minHeight="48dp"
            android:layout_marginStart="70dp"
            android:layout_marginEnd="70dp"
            app:layout_constraintVertical_bias="0.1"

            android:drawableStart="@drawable/hashtag"
            android:paddingStart="5dp"
            android:drawablePadding="-25dp"
            android:drawableTint="@color/black"
            tools:ignore="RtlSymmetry"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imagenUsuario"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
    />

    <EditText
            android:id="@+id/nombre_carrera"

            android:background="@drawable/design"

            android:inputType="text"
            android:hint="Nombre de la Carrera"
            android:textColor="@drawable/edit_text"
            android:textColorHint="@color/grisBonito"
            android:gravity="center_vertical|center_horizontal"

            android:layout_width="0dp"
            android:layout_height="48dp"
            android:minHeight="48dp"
            android:layout_marginStart="70dp"
            android:layout_marginEnd="70dp"
            app:layout_constraintVertical_bias="0.075"

            android:drawableStart="@drawable/name"
            android:paddingStart="5dp"
            android:drawablePadding="-25dp"
            android:drawableTint="@color/black"
            tools:ignore="RtlSymmetry"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imagenUsuario"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
    />

    <EditText
            android:id="@+id/titulo_carrera"

            android:background="@drawable/design"

            android:inputType="text"
            android:hint="Título de la Carrera"
            android:textColor="@drawable/edit_text"
            android:textColorHint="@color/grisBonito"
            android:gravity="center_vertical|center_horizontal"

            android:layout_width="0dp"
            android:layout_height="78dp"
            android:layout_marginStart="70dp"
            android:layout_marginEnd="70dp"
            app:layout_constraintVertical_bias="0.075"

            android:drawableStart="@drawable/title"
            android:drawablePadding="-15dp"
            android:paddingStart="5dp"
            android:drawableTint="@color/black"
            tools:ignore="RtlSymmetry"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/nombre_carrera"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
    />

    <ImageButton
            android:id="@+id/descartar"

            android:background="@drawable/boton_rojo"

            android:layout_width="120dp"
            android:layout_height="50dp"

            android:layout_marginStart="50dp"
            app:layout_constraintVertical_bias="0.20"

            android:src="@drawable/descartar"
            android:tint="@color/white"
            android:scaleType="fitCenter"
            android:contentDescription="Descartar Cambios"

            app:layout_constraintTop_toBottomOf="@+id/titulo_carrera"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/insertar"
            app:layout_constraintStart_toStartOf="parent"
    />

    <ImageButton
            android:id="@+id/insertar"

            android:background="@drawable/boton_verde"

            android:layout_width="120dp"
            android:layout_height="50dp"

            android:layout_marginEnd="50dp"

            app:layout_constraintVertical_bias="0.20"

            android:scaleType="fitCenter"

            android:src="@drawable/save_icon"
            android:tint="@color/white"
            android:contentDescription="Cursos de la Carrera"

            app:layout_constraintTop_toBottomOf="@+id/titulo_carrera"
            app:layout_constraintStart_toEndOf="@id/descartar"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
    />

</androidx.constraintlayout.widget.ConstraintLayout>