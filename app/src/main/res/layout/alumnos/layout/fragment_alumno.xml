<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/fondo_entidades"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".ui.view.fragment.cursos.CursoFragment"
>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
    >
        <ImageButton
                android:id="@+id/goBack"

                android:contentDescription="Ir atrás"

                android:src="@drawable/go_back"

                android:layout_width="60dp"
                android:layout_height="60dp"

                android:background="@android:color/transparent"

                app:layout_constraintVertical_bias="0.05"

                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
        />

        <ImageView
                android:id="@+id/imagenUsuario"

                android:src="@drawable/ic_university_svgrepo_com"

                android:layout_width="160dp"
                android:layout_height="160dp"

                app:layout_constraintVertical_bias="0.1"

                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
        />

        <EditText
                android:id="@+id/cedula_alumno"

                android:background="@drawable/design"

                android:inputType="textPersonName"
                android:hint="Cédula del alumno"
                android:textColor="@drawable/edit_text"
                android:textColorHint="@color/grisBonito"
                android:gravity="center_vertical|center_horizontal"

                android:enabled="false"

                android:layout_width="0dp"
                android:layout_height="48dp"
                android:minHeight="48dp"
                android:layout_marginStart="70dp"
                android:layout_marginEnd="70dp"
                app:layout_constraintVertical_bias="0.05"

                android:drawableStart="@drawable/ic_users"
                android:paddingStart="5dp"
                android:drawablePadding="-25dp"
                android:drawableTint="@color/black"
                tools:ignore="RtlSymmetry"

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imagenUsuario"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
        />

        <EditText
                android:id="@+id/nombre_alumno"

                android:background="@drawable/design"

                android:inputType="textPersonName"
                android:hint="Nombre del Alumno"
                android:textColor="@drawable/edit_text"
                android:textColorHint="@color/grisBonito"
                android:gravity="center_vertical|center_horizontal"

                android:enabled="false"

                android:layout_width="0dp"
                android:layout_height="48dp"
                android:minHeight="48dp"
                android:layout_marginStart="70dp"
                android:layout_marginEnd="70dp"
                app:layout_constraintVertical_bias="0.05"

                android:drawableStart="@drawable/name"
                android:paddingStart="5dp"
                android:drawablePadding="-25dp"
                android:drawableTint="@color/black"
                tools:ignore="RtlSymmetry"

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cedula_alumno"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
        />

        <EditText
                android:id="@+id/tel_alumno"

                android:background="@drawable/design"

                android:inputType="number"
                android:hint="Teléfono del alumno"
                android:textColor="@drawable/edit_text"
                android:textColorHint="@color/grisBonito"
                android:gravity="center_vertical|center_horizontal"

                android:enabled="false"

                android:layout_width="0dp"
                android:layout_height="48dp"
                android:minHeight="48dp"
                android:layout_marginStart="70dp"
                android:layout_marginEnd="70dp"
                app:layout_constraintVertical_bias="0.05"

                android:drawableStart="@drawable/ic_phone_svgrepo_com"
                android:drawablePadding="-15dp"
                android:paddingStart="5dp"
                android:drawableTint="@color/black"
                tools:ignore="RtlSymmetry"

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/nombre_alumno"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
        />

        <EditText
                android:id="@+id/email_alumno"

                android:background="@drawable/design"

                android:inputType="number"
                android:hint="Email del alumno"
                android:textColor="@drawable/edit_text"
                android:textColorHint="@color/grisBonito"
                android:gravity="center_vertical|center_horizontal"

                android:enabled="false"

                android:layout_width="0dp"
                android:layout_height="48dp"
                android:minHeight="48dp"
                android:layout_marginStart="70dp"
                android:layout_marginEnd="70dp"
                app:layout_constraintVertical_bias="0.055"

                android:drawableStart="@drawable/ic_email_svgrepo_com"
                android:paddingStart="5dp"
                android:drawablePadding="-15dp"
                android:drawableTint="@color/black"
                tools:ignore="RtlSymmetry"

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tel_alumno"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
        />

        <EditText
                android:id="@+id/fecha_nacimiento"

                android:background="@drawable/design"

                android:inputType="text"
                android:hint="Fecha nacimiento"
                android:textColor="@drawable/edit_text"
                android:textColorHint="@color/grisBonito"
                android:gravity="center_vertical|center_horizontal"

                android:enabled="false"

                android:layout_width="0dp"
                android:layout_height="48dp"
                android:minHeight="48dp"
                android:layout_marginStart="70dp"
                android:layout_marginEnd="70dp"
                app:layout_constraintVertical_bias="0.055"

                android:drawableStart="@drawable/calendar"
                android:paddingStart="5dp"
                android:drawablePadding="-25dp"
                android:drawableTint="@color/black"
                tools:ignore="RtlSymmetry"

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/email_alumno"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
        />


        <EditText
                android:id="@+id/carrera"

                android:background="@drawable/design"

                android:inputType="text"
                android:hint="Carrera que cursa"
                android:textColor="@drawable/edit_text"
                android:textColorHint="@color/grisBonito"
                android:gravity="center_vertical|center_horizontal"

                android:enabled="false"

                android:layout_width="0dp"
                android:layout_height="48dp"
                android:minHeight="48dp"
                android:layout_marginStart="70dp"
                android:layout_marginEnd="70dp"
                app:layout_constraintVertical_bias="0.1"

                android:drawableStart="@drawable/ic_career"
                android:paddingStart="5dp"
                android:drawablePadding="-25dp"
                android:drawableTint="@color/black"
                tools:ignore="RtlSymmetry"

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/fecha_nacimiento"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
        />

        <EditText
                android:id="@+id/nota"

                android:background="@drawable/design"

                android:inputType="number"
                android:hint="Nota del Estudiante"
                android:textColor="@drawable/edit_text"
                android:textColorHint="@color/grisBonito"
                android:gravity="center_vertical|center_horizontal"

                android:visibility="gone"
                android:enabled="false"

                android:layout_width="0dp"
                android:layout_height="48dp"
                android:minHeight="48dp"
                android:layout_marginStart="70dp"
                android:layout_marginEnd="70dp"
                app:layout_constraintVertical_bias="0.1"

                android:drawableStart="@drawable/nota"
                android:paddingStart="5dp"
                android:drawablePadding="-25dp"
                android:drawableTint="@color/black"
                tools:ignore="RtlSymmetry"

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/carrera"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
        />

        <ImageButton
                android:id="@+id/historial_academico"

                android:background="@drawable/boton_add"

                android:layout_width="120dp"
                android:layout_height="50dp"

                android:visibility="gone"

                app:layout_constraintVertical_bias="0.20"

                android:src="@drawable/nota"
                android:tint="@color/white"
                android:contentDescription="Matriculas"

                app:layout_constraintTop_toBottomOf="@+id/carrera"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/matriculas"
        />

        <ImageButton
                android:id="@+id/matriculas"

                android:background="@drawable/boton_add"

                android:layout_width="120dp"
                android:layout_height="50dp"

                android:visibility="gone"

                app:layout_constraintVertical_bias="0.20"

                android:src="@drawable/ic_enroll"
                android:tint="@color/white"
                android:contentDescription="Matriculas"

                app:layout_constraintTop_toBottomOf="@+id/carrera"
                app:layout_constraintStart_toEndOf="@+id/historial_academico"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
        />

        <Space
                android:layout_width="0dp"
                android:layout_height="150dp"

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/carrera"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
        />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.core.widget.NestedScrollView>